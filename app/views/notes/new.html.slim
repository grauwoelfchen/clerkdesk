- content_for :header
  h1 Notes
  h2 Protokoll, Memo

- content_for :navigation
  nav.pure-menu.pure-menu-horizontal
    ul.pure-menu-list
      li.pure-menu-item
        = link_to "Index", notes_path, class: "pure-menu-link"
      li.pure-menu-item.pure-menu-selected
        = link_to "New", "#", class: "pure-menu-link"

= render "form", note: @note, action: "create"
