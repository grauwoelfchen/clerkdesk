- breadcrumb :settlement, @finance

- content_for :header
  h2= Finance.model_name.human
  h3= t("subheading.settlement")

- content_for :actions
  = render "shared/action", finance: @finance

- content_for :links
  ul.links
    li= link_to t("action.resource.edit", resource: Settlement.model_name.human.downcase), edit_finance_settlement_path(@finance)

