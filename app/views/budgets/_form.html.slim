- action = budget.persisted? ? "update" : "create"
= form_for budget, url: financial_path(finance, :finance_budget), html: {class: "form pure-form"} do |f|
  - if budget.errors.any?
    = render "shared/error", resource: budget
  fieldset.pure-group
    = f.text_field :title,  class: "pure-input-1", placeholder: "A title"
  .action
    = f.submit t("action.#{action}"), class: "pure-button button"
    - if action == "update"
      = link_to t("action.destroy"), financial_path(finance, :finance_budget), class: "pure-button button button-error", data: {method: :delete, confirm: "Are you sure?"}
