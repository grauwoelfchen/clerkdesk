@import "_mixin.css.styl"

*::before,
*::after
  box-sizing border-box

*
  box-sizing border-box

body
  background-color #FAF9F8
  color            #777777
  min-width        320px

.pure-img-responsive
  max-width 100%
  height    auto

.rightbox
  .languages
    padding 11px 0 13px 0

#main
  .content
    background-color #FFFFFF
    padding          13px 18px 39px 18px
    min-height       760px
    line-height      1.444
    border-right     1px solid #F3F3F3

#public
  .content
    background-color #FFFFFF
    padding          0 0 39px 0
    min-height       760px
    line-height      1.444

.rightbar
  background none
  min-height 760px
  .actions,
  .links
    padding 6px 0 21px 0
  .links
    ul
      padding-left 1px
      li
        list-style none
        margin     0 0 11px 0

.rightbox
  padding 0 9px

.rightbar
  padding 13px 9px

.rightbox,
.rightbar
  h6
    margin      3px 0 6px 0
    font-weight normal
  nav.btn
    ul
      background-color #FFFFFF
      li
        form
          display inline-block
          width   100%
          height  100%
          input[type='submit']
            display    inline
            text-align left
            width      100%
            padding    13px 18px
            background none
            border     none
            cursor     pointer
            &:hover
              background-color #EEEEEE

.header
  height        86px
  margin        0 auto
  color         #CCCCCC
  text-align    left
  border-bottom 1px solid #EEEEEE
  h2
    color       #190318
    margin      0 0 6px 0
    font-size   29px
    font-weight normal
  h3
    color       #CCCCCC
    font-weight normal
    padding     0
    margin      0
  .user
    display    inline
    margin     0 5px 0 23px
    text-align right
  .login
    text-align right
  .header-content
    padding 0 18px 0 18px

.header > div:first-child
  background-color #FFFFFF
  height           100%
  .pure-g
    height       100%
    padding-top  16px
    border-right 1px solid #F3F3F3

.navigation
  margin 0
  .breadcrumbs
    margin 3px 0 18px 0
    a
      color           #ABAB9B
      text-decoration none
      &:hover
        color #5F5F5F
    span.current
      color #5F5F5F

.footer
  background-color #FAFAF8
  border-top       1px solid #EEEEEE
  font-size        87.5%
  padding          21px 21px 21px 26px
  line-height      1.6
  margin           0 auto
  ul.legal-links,
  p.copyright
    text-align right
    margin     5px 6px 3px 0
    padding    0
  ul.legal-links
    li
      list-style    none
      padding-right 6px

.footer.public
  ul.legal-links,
  p.copyright
    text-align left

$width = 212px

#content
  position     relative
  padding-left 0
  &.active
    #menu
      left  $width
      width $width
    .menu-link
      left $width

#content,
#menu,
.menu-link
  -webkit-transition all 0.2s ease-out 0s
  -moz-transition    all 0.2s ease-out 0s
  -ms-transition     all 0.2s ease-out 0s
  -o-transition      all 0.2s ease-out 0s
  transition         all 0.2s ease-out 0s

.menu-link
  position fixed
  display  block
  top      0
  left     0
  background #000001
  font-size  11px
  z-index    10
  width      1.7em
  height     1.7em
  padding    1.1em
  span
    position relative
    display  block
    margin   0.7em 0 0 0
  span:before,
  span:after
    position absolute
    top      -0.49em
    content  " "
  span:after
    top 0.55em
  span,
  span:before,
  span:after
    background-color #FFFFFF
    width            100%
    height           0.16em
    transition       all 0.3s
  &:hover,
  &:focus
    background-color #000000
  &.active
    span
      background  transparent
      &:before
        transform rotate(45deg) translate(0.44em, 0.48em)
      &:after
        transform rotate(-45deg) translate(0.24em, -0.3em)

#menu
  i
    display inline-block
    padding 0
    margin  0 7px 0 0

#menu
  margin-left -($width)
  width       $width
  position    fixed
  top         0
  left        0
  bottom      0
  z-index     1000
  background  #6C5035
  overflow-y  auto
  -webkit-overflow-scrolling touch
  a
    color   #F3F3F3
    border  none
    padding 21px 18px
  .pure-menu,
  .pure-menu ul
    border     none
    background transparent
  .pure-menu ul,
  .pure-menu .menu-item-divided
    border-top 1px solid #55391D
  .pure-menu li a:hover,
  .pure-menu li a:focus
    background #55391D
  .pure-menu-heading
    background #93765A
  .pure-menu-selected a
    color      #FFFFFF
    background #4C331A
  .pure-menu-heading
    text-align     left
    padding        34px 0 0 19px
    display        block
    height         85px
    font-size      18px
    color          #FFFFFF
    margin         0


@media(min-width 88em)
  .rightbox,
  .rightbar
     padding-left  17px
     padding-right 17px
  #content
     padding-left $width
     left         0
  #menu
      left $width
  .menu-link
      position fixed
      left     $width
      display  none
  #content.active .menu-link
    left $width

@media(max-width 88em)
  #content.active
    position relative
    left     $width
