@import('_mixin.css.styl')

body
  display        flex
  flex-direction row
  color          #777777

.side-menu
  flex    0 0 auto
  z-index 1
  width   $side-menu-width
  .menu
    //width      $side-menu-width
    background $chocolate-color !important
    border     none
    i
      display inline-block
      padding 0
      margin  0 9px 0 0
    .item.top
      background $light-brown-color
      padding    17px 3px 13px 8px
      .brand
        vertical-align bottom
        img
          display inline-block
          margin  0 1px 0 4px
      &:hover
        background darken($light-brown-color, 6%) !important
    .item
      color   $gray-color
      border  none
      padding 16px 9px 16px 18px
      &:hover
        color      $light-gray-color !important
        background darken($chocolate-color, 13%) !important
      &.active
        color      $light-gray-color !important
        background darken($chocolate-color, 27%) !important


.main
  flex         1 1 auto
  min-height   800px
  line-height  1.333

.main > .content > .column:first-child
  padding-right 0px

.public
  width  100%
  height 100%


.right-menu
  background-color lighten($pale-gray-color, 63%)
  min-height       760px
  padding          0 9px 0 18px
  .navigation
    padding 3px 0 21px 0
    margin  13px 0 0 0
    ul.links
      padding 0 0 0 2px
      li
        list-style none
        margin     13px 0

.right-menu
  h6
    margin      3px 0 6px 0
    font-weight normal
  .navigation.btn
    ul
      background-color #FFFFFF
      li
        form
          display inline-block
          width   100%
          height  100%
          input[type='submit']
            display    inline
            text-align left
            width      100%
            padding    13px 18px
            background none
            border     none
            cursor     pointer
            &:hover
              background-color #EEEEEE


.content-header
  height           $navbar-height
  margin           0 auto
  color            #CCCCCC
  text-align       left
  border-bottom    1px solid $pale-gray-color
  background-color $cream-color
  .heading
    padding        6px 0 0 12px
    display        inline-block
    vertical-align middle
    h2
      color       #190318
      margin      3px 0 3px 0
      font-size   29px
      font-weight normal
    h3
      color       #CCCCCC
      margin      3px 0 0 0
      font-weight normal
      padding     0
      margin      0


.inner-content
  padding    13px 0 27px 0
  min-height 837px

.navigation
  margin 0 0 9px 0


section
  padding 0
  hr
    background $light-gray-color
    border     thin none
    height     0.07em
    margin     13px 0

section .container
  margin     9px 0
  min-height 510px
  legend
    {legend-style}
  .page-content
    padding 9px 0 0 7px
  .action
    margin-top 42px


.footer
  color            darken($pale-gray-color, 5%)
  background-color $dark-forest-green-color
  font-size        87.5%
  padding          21px 21px 21px 26px
  line-height      1.6
  margin           0 auto
  a
    display inline-block
    margin  0 4px 0 0
    color   darken($forest-green-color, 3%) !important
  ul.legal-links,
  p.copyright
    margin     5px 6px 3px 0
    padding    0
  ul.legal-links
    li
      list-style    none
      padding-right 6px

.footer-content
  margin-left 11px
