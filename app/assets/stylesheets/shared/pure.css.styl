@import("_mixin.css.styl")

// layout
.pure-img-responsive
  max-width 100%
  height    auto

.pure-menu-heading
  text-transform none


// form
.pure-form
  fieldset
    padding 0
  input[type="text"],
  input[type="password"]
  select,
  textarea
    box-shadow none
  .pure-group
    input:first-child
      border-radius 2px 2px 0 0 !important
    textarea:last-child
      top           -1px
      border-radius 0 0 2px 2px !important

fieldset.pure-group
  label
    display inline-block
    margin  13px 0px 9px 0px

.pure-form
  .pure-control-group
    label.top
      vertical-align top
      margin-top     8px

.pure-form.pure-form-stacked
  .pure-control-group
    label
      margin 0.9em 0 0.6em 0
    input[type="text"]
      min-width 125px

.pure-menu-link,
.pure-menu-disabled,
.pure-menu-heading
  padding 0.3em 1.2em

.pure-menu-has-children
  line-height 2.1em
  .pure-menu-children
    width 100%

.pure-button
  padding 0.8em 1.1em

.pure-button-primary
  background-color #336699


// table
table.pure-table
  border 1px solid $plain-color
  thead th
    padding    0.5em 0.8em
    background $plain-color
  tbody td
    padding 0.5em 0.8em
.pure-table-horizontal th,
.pure-table-horizontal td
  border-bottom 1px solid $plain-color


// customize
.header > div:first-child
  .pure-g
    height       100%
    padding-top  16px
    border-right 1px solid #F3F3F3

#menu
  .pure-menu,
  .pure-menu ul
    border     none
    background transparent
  .pure-menu ul,
  .pure-menu .menu-item-divided
    border-top 1px solid #55391D
  .pure-menu li a:hover,
  .pure-menu li a:focus
    background #55391D
  .pure-menu-heading
    background #93765A
  .pure-menu-selected a
    color      #FFFFFF
    background #4C331A
  .pure-menu-heading
    text-align left
    padding    34px 0 0 19px
    display    block
    height     85px
    font-size  18px
    color      #FFFFFF
    margin     0
