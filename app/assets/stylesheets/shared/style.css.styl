@import("_mixin.css.styl")

// flash
.flash-messages
  ul
    margin        0 0 13px 0
    padding       12px 22px
    border-radius 2px
    li
      list-style none
  ul.notice
    background-color #D6E0CC
    color            #336600
  ul.alert
    background-color #FDF5F2
    color            #AF5A3E


// font
.fa-5
  font-size 5.2em
.fa-4
  font-size 4.2em
.fa-3
  font-size 3.2em


// sticky
.sticky
  height           31px
  background-color #FFFFCC
  padding          19px 19px 3px 9px
  position         relative
  color            #140A00
  font-size        14px


// content
.content
  h3
    margin 0 0 18px 2px
  h4
    font-size   27px
    font-weight normal
    margin      0 0 9px 0
  h6
    font-size   17px
    font-weight normal
    margin      3px 0 3px 1px


// index
p.result
  margin 0


// table
table.table
  width  100%
  margin 11px 0 18px 0
  th,
  td
    line-height 1.8em
  th
    font-weight normal
  td.operations
    text-align center
    ul
      margin  0
      padding 0
      li
        display    inline
        list-style none
        margin     0 3px

// sort
th
  span.attribute
    display      inline-block
    margin-right 4px
  ul.sort-links
    display inline
    padding 0
    margin  0
    li
      display    inline
      list-style none
  i.fa.fa-angle-up,
  i.fa.fa-angle-down
    font-weight    bold
    border-radius  2px
    display        inline-block
    margin         0
    padding        1px 3px
    text-align     center
    vertical-align middle
    color          #777777
    &:hover
      background-color #F3F3F3
    &.active
      color #CC0000

// pagination
pagination-link = @block {
  color   #777777
  display inline-block
  margin  0
}

pagination = @block {
  border-radius   2px
  text-decoration none
}

div.pagination
  margin 2px 0 0 0
  > div
    vertical-align middle

nav.pagination,
.pagination-info
  margin 6px 0 0 1px
  &.right
    text-align    right
    margin-bottom 0
    padding-right 3px
  span
    line-height 27px
  span.prev
  span.next,
  span.current,
  span.page
    {pagination-link}
    {pagination}
    padding 0
    a
      {pagination-link}
      padding         0px 8px
      border          none
      text-decoration none
    &:hover
      background-color #EEEEEE
  span.page.gap
    border none
    &:hover
      background-color #FFFFFF
  span.current
    padding          0px 8px
    color            #140A00
    background-color #DDDDDD
    &:hover
      background-color #DDDDDD


// show
section.block
  padding 0
  .group
    label
      width 10em
    margin 8px 0
  hr
    background #DDDDDD
    border     medium none
    height     0.16em
    margin     10px 0 21px 0

section.block > .container
  margin 9px 0
  legend
    {legend-style}
  .action
    margin-top 42px

.field
  padding 0
  &.left
    margin 0 6px 0 0
  &.right
    margin 0 0 0 6px
  h5
    margin 3px 0 13px 0
  ul
    font-size 15px
    padding   0
    li
      list-style none
    li.more
      text-align right
  p.asset
    padding    0
    margin     134px 0 0 0
    text-align right
    font-size  38px
  .wall
    min-height 175px
    padding    9px 18px
    background #F1EFED

.box
  margin 7px 0 13px 0
  .main
    padding 18px 3px 36px 3px
    h5
      margin         8px 0 13px 1px
      vertical-align middle
      font-size      21px
    nav.nav
      margin 0 0 3px 3px

.nav
  margin 0
  ul
    padding 0
    margin  0
    li
      list-style none


// btn, tab
nav.btn
  ul
    border        1px solid #EEEEEE
    border-radius 2px
    &:hover
      border-radius 2px 2px 0 0
  ul.pure-menu-children
    padding       0
    border        1px solid #E3E3E3
    border-radius 0 0 2px 2px
    li.delimiter
      border-top 1px solid #EEEEEE
  a
    border none

nav.tab
  border-radius 2px 2px 0 0
  background    #EBE7E4
  line-height   9px
  ul.pure-menu-list
    background #EBE7E4
    li.pure-menu-item
      float      left
      list-style none
      a
        line-height 29px
      a:hover
        background #DDD7D2
    li.pure-menu-selected
      a
        background #B8AEA4
        &:hover
          background #B8AEA4
  .pure-menu-has-children
    .pure-menu-children
      width     auto
      min-width 120px
  ul.pure-menu-children
    li.pure-menu-item
      float none
      a
        background none
      a:hover
        background #EEEEEE
  ul.pure-menu-children
    padding       0
    border        1px solid #E3E3E3
    border-radius 0 0 2px 2px
    li.delimiter
      border-top 1px solid #EEEEEE

// form
form.form
  legend
    {legend-style}
    width 100%
  .field_with_errors
    display inline
    input[type="text"]
      border-color #CA3C3C

.select-form
  &.right
    text-align    right
    margin-bottom 0
    padding-right 3px

// shared
ul.actions
  display inline-block
  margin  0 0 0 3px
  padding 0
  li
    display    inline
    list-style none
    margin     0 3px

.action
  margin 21px 0 18px 1px
  input[type="submit"].button,
  button.button,
  a.button
    margin-right 31px

  .button-error
    color            #FFFFFF
    background-color $error-color
