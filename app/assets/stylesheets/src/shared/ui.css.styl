@import('_mixin.css.styl')

// Collections - Menu
.ui.vertical.menu
  box-shadow none
  width      13rem

.ui.inverted.menu
  border-radius 2px
  background    darken($chocolate-color, 27%)


// Collections - Grid
.ui.grid
  margin 0
  > .column:not(.row)
    padding-top    0
    padding-bottom 0

.ui.grid.content-header
  .column
    padding-left  3px
    padding-right 3px

.ui.grid.inner-content
  margin 0
  > .column:not(.row)
    padding-top    6px
    padding-bottom 6px
    padding-left   0
    padding-right  0

.inner-content
  .ui.grid
    .column:not(.row)
      padding-left  0
      padding-right 0

.ui.grid + .grid
  margin-top 0


// Collections - Breadcrumb
.ui.breadcrumb
  span.divider
    margin 0 6px

.ui.text.menu .item .menu
  margin 9px 0 0 18px
  .item
    padding 0.5em 0.25em
    margin  0 0


// Colletions - Form
.ui.form
  input[type="text"],
  input[type="text"]:focus,
  textarea,
  textarea:focus
    border-radius 2px

.ui.dropdown.selection
  border-radius 2px
  .menu
    border-radius 0 0 2px 2px


// Views - Item
.ui.items > .item > .image:not(.ui)
  width 100px

.ui.items > .item .meta
  margin 0.3em 0

.ui.items > .item > .content
  margin-bottom 21px

.ui.items > .item > .content > a.header,
.ui.items > .item > .content > .description
  color $blue-ink-color

.ui.items > .item > .content > .description,
.ui.items > .item > .content > .extra
  margin-top 0.4em
