@import("../shared/_mixin.css.styl")

// shared
section
  .report-header
    .name
      display     inline-block
      font-size   21px
      font-weight normal
      margin      0 0 3px 0
    .term
      display inline-block
      float   right
      margin  0 1px 5px 0
      .started_at,
      .finished_at
        background    $field-color
        border-radius 2px
        padding       3px 9px

section
  .sub-header
    margin 5px 0 0 2px
    h5
      margin  0 4px 1px 0
      display inline-block
    p.description
      margin  0 0 2px 0
      display inline-block
      vertical-align bottom
