// show
section.view
  padding: 3px 3px
  h4
    font-size: 15px
    margin:  0 0 9px 0

.field
  padding: 9px 0
  &.left
    margin: 0 9px 0 0
  &.right
    margin: 0 0 0 9px
  h5
    margin:      3px 0 13px 0
    //font-size:   18px
    //font-weight: bold
  ul
    font-size: 15px
    padding:   0
    li
      list-style: none
    li.more
      text-align: right
  p.asset
    padding:    0
    margin:     134px 0 0 0
    text-align: right
    font-size:  38px
  .wall
    min-height: 175px
    padding:    9px 18px
    background: #EEEBE8


// shared
.action
  margin: 18px 0 18px 1px
  input[type="submit"].button,
  button.button,
  a.button
    margin-right: 31px

.button-error
  color:      #FFFFFF
  background: $error-color

.right
