// content
.content
  h3
    margin: 0 0 18px 2px
  h4
    margin: 0 0 9px 0


// table
table.table
  width:  100%
  margin: 3px 0 18px 0
  td
    ul.operation
      margin:  0
      padding: 0
      li
        display:    inline
        list-style: none
        margin:     0 3px

// sort
th
  span.attribute
    display:      inline-block
    margin-right: 4px
  ul.sort-links
    display: inline
    padding: 0
    margin:  0
    li
      display:    inline
      list-style: none
  i.fa.fa-angle-up,
  i.fa.fa-angle-down
    font-weight:    bold
    border-radius:  2px
    display:        inline-block
    margin:         0
    padding:        1px 3px
    text-align:     center
    vertical-align: middle
    color:          #777777
    &:hover
      background-color: #F3F3F3
    &.active
      color: #CC0000

// pagination
pagination-link = @block {
  color:   #777777
  display: inline-block
  margin:  0
}

pagination = @block {
  border-radius:   2px
  text-decoration: none
}

nav.pagination,
.pagination-info
  margin: 6px 0 11px 1px
  span.prev
  span.next,
  span.current,
  span.page
    {pagination-link}
    {pagination}
    padding: 0
    a
      {pagination-link}
      padding:         1px 8px
      border:          none
      text-decoration: none
    &:hover
      background-color: #EEEEEE
  span.page.gap
    border: none
    &:hover
      background-color: #FFFFFF
  span.current
    padding:          1px 8px
    color:            #140A00
    background-color: #DDDDDD
    &:hover
      background-color: #DDDDDD

