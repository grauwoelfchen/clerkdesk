$error-color = #CA3C3C

// button
.button-error
  color:      #FFFFFF
  background: $error-color


// flash
.flash-messages
  ul
    margin:        0 0 18px 0
    padding:       13px 28px
    border-radius: 2px
    li
      list-style: none
  ul.notice
    border:           1px solid #B29980
    background-color: #E0D6CC
    color:            #331A00
  ul.alert
    border:           1px solid #CC3300
    background-color: #EBAD99
    color:            #7A1F00


// sticky
.sticky
  min-width:        310px
  height:           31px
  background-color: #F5F5F5
  padding:          19px 19px 3px 9px
  position:         relative
  color:            #140A00
  font-size:        14px
