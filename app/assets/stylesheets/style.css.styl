$error-color = #CA3C3C

// button
.button-error
  color:      #FFFFFF
  background: $error-color


// flash
.flash-messages
  ul
    margin:        0 0 13px 0
    padding:       12px 22px
    border-radius: 2px
    li
      list-style: none
  ul.notice
    background-color: #D6E0CC
    color:            #336600
  ul.alert
    background-color: #FDF5F2
    color:            #AF5A3E


// sticky
.sticky
  min-width:        310px
  height:           31px
  background-color: #F5F5F5
  padding:          19px 19px 3px 9px
  position:         relative
  color:            #140A00
  font-size:        14px
