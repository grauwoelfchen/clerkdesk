// content
.content
  h3
    margin: 0 0 18px 2px


// table
table.table
  width: 100%
  margin: 3px 0 18px 0
  td
    ul.operation
      margin:  0
      padding: 0
      li
        display:    inline
        list-style: none
        margin:     0 3px


// form
form.form
  width:  100%
  margin: 3px 0 19px 0
  input[type="submit"]
    margin: 19px 0
  .error-messages
    ul
      margin:  9px 0 18px 0
      padding: 0 0 0 16px
      li
        color: $error-color


// show
section.view
  padding: 3px 3px


// shared
.action
  margin: 18px 0 18px 1px
  input[type="submit"].button,
  button.button,
  a.button
    margin-right: 31px
