// shared
section.block
  .report-header
    .pure-u-12-24
      vertical-align bottom
    .name
      display     inline-block
      font-size   21px
      font-weight normal
      margin      0 0 3px 0
    .term
      display      inline-block
      float        right
      margin-right 1px
      .started_at,
      .finished_at
        background    #EEEEEE
        border-radius 2px
        padding       3px 9px

section.block
  .account_book-header
    margin 5px 0 0 2px
    h5.name
      margin  0 4px 1px 0
      display inline-block
    p.description
      margin  0 0 2px 0
      display inline-block
      vertical-align bottom
