@import("_mixin.css.styl")

body
  display          flex
  flex-direction   row
  background-color #FAF9F8
  color            #777777

// side-menu
.side-menu
  flex       0 0 auto
  position   relative
  width      14rem
  z-index    1
  overflow-y auto
  i
    display inline-block
    padding 0
    margin  0 8px 0 0
  .icon
    height 85px
  .item
    color   #F3F3F3
    border  none
    padding 21px 18px
    &:hover
      text-decoration none
  .bottom
    height   60px
    position absolute
    left     0
    bottom   0
    width    100%
    margin   0
    background-color #1F0F00
    a
      margin  0
      padding 23px 27px
      &:hover
        color            #FFFFFF
        background-color #3D2915

.main
  flex             1 1 auto
  min-width        0
  background-color #FFFFFF
  min-height       800px
  line-height      1.444
  border-right     1px solid #F3F3F3


.right-menu
  background none
  min-height 760px
  padding    13px 9px
  .locales
    padding 6px 0 21px 0
    margin  13px 0 0 3px
  .navs
    padding 6px 0 21px 0
    margin  18px 0 0 3px
    ul.links
      padding 0 0 0 2px
      li
        list-style none
        margin     13px 0

.right-box,
.right-menu
  h6
    margin      3px 0 6px 0
    font-weight normal
  nav.btn
    ul
      background-color #FFFFFF
      li
        form
          display inline-block
          width   100%
          height  100%
          input[type='submit']
            display    inline
            text-align left
            width      100%
            padding    13px 18px
            background none
            border     none
            cursor     pointer
            &:hover
              background-color #EEEEEE


// header area
.content-header
  height        86px
  margin        0 auto
  color         #CCCCCC
  text-align    left
  border-bottom 1px solid #EEEEEE
  h2
    color       #190318
    margin      9px 0 3px 0
    font-size   29px
    font-weight normal
  h3
    color       #CCCCCC
    margin      3px 0 0 0
    font-weight normal
    padding     0
    margin      0


// navigation
.navigation
  margin 0
  .breadcrumbs
    margin 3px 0 18px 0
    a
      line-height 26px
      color       $gray-color
      &:hover
        color $dark-gray-color
    span.current
      color $dark-gray-color


// section
section.block
  padding 0
  .group
    label
      width 10em
    margin 8px 0
  hr
    background #C6BEB6
    border     medium none
    height     0.16em
    margin     10px 0 21px 0
  label
    display      inline-block
    margin-right 13px
    min-width    90px
    text-align   right

section.block .container
  margin 9px 0
  legend
    {legend-style}
  .action
    margin-top 42px


// footer area
.content-footer
  background-color #FAFAF8
  border-top       1px solid #EEEEEE
  font-size        87.5%
  padding          21px 21px 21px 26px
  line-height      1.6
  margin           0 auto
  ul.legal-links,
  p.copyright
    text-align right
    margin     5px 6px 3px 0
    padding    0
  ul.legal-links
    li
      list-style    none
      padding-right 6px

.content-footer.public
  ul.legal-links,
  p.copyright
    text-align left
