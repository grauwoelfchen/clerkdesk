// tag_list
ul.tag-editor
  padding: 0
  border:  1px solid #CCCCCC
  width:   100%
  li.placeholder
    margin: 5px 0 9px 0
  li
    margin:  0 0 2px 0
    padding: 0
    .tag-editor-spacer,
    .tag-editor-tag,
    .tag-editor-delete
      margin: 7px 0 5px 0
    input[type="text"]
      padding: 0
      margin:  0
      border: none
      width: 100% !important 

// textarea
textarea#note_content
  overflow:  hidden
  resize:    none
  word-wrap: break-word
  padding:   6px 9px

// show
section.view
  .text
    margin: 3px 0 27px 0
    h1,
    h2
      font-size: 16px
      margin:    21px 0
    table
      border: 1px solid #CCCCCC
      margin: 2px 0 3px 1px
    th,
    td
      padding: 3px 9px
      border:  1px solid #CCCCCC
    th
      background-color: #F3F3F3
      text-align: center !important
    ul,
    ol
      padding: 0
    ol
      margin:  3px 0 6px 24px
    ul
      margin:  3px 0 6px 17px
