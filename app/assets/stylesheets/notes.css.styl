// tag_list
ul.tag-editor
  margin:  9px 0
  padding: 0
  border:  1px solid #CCCCCC
  width:   100%
  li.placeholder
    margin: 5px 0 9px 0
  li
    margin:  0 0 2px 0
    padding: 0
    .tag-editor-spacer,
    .tag-editor-tag,
    .tag-editor-delete
      margin: 7px 0 5px 0
    input[type="text"]
      padding: 0
      margin:  0
      border: none
      width: 100% !important 

// textarea
textarea#note_content
  overflow:  hidden
  resize:    none
  word-wrap: break-word
  padding:   6px 9px
