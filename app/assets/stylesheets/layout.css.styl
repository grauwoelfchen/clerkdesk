body
  color: #777

.pure-img-responsive
  max-width: 100%
  height:    auto


$width = 255px


#content,
#menu,
.menu-link
  -webkit-transition: all 0.2s ease-out
  -moz-transition:    all 0.2s ease-out
  -ms-transition:     all 0.2s ease-out
  -o-transition:      all 0.2s ease-out
  transition:         all 0.2s ease-out

#content
  position:     relative
  padding-left: 0
  &.active
    #menu
      left:  $width
      width: $width
    .menu-link
      left: $width


.content
  margin:      18px auto 55px auto
  padding:     9px
  line-height: 1.6em
  min-height:  760px

.header
  margin:        0 auto
  color:         #CCCCCC
  text-align:    left
  padding:       11px 0 6px 19px
  border-bottom: 1px solid #EEEEEE
  h1
    color:       #190318
    margin:      9px 0
    font-size:   3em
    font-weight: 300
  h2
    color:       #CCCCCC
    font-weight: 300
    padding:     0
    margin-top:  0
  .user
    margin:     12px 4px 0 0
    text-align: right

.content-subhead
    margin:      50px 0 20px 0
    font-weight: 300
    color:       #888888

.navigation
  .nav
    nav
      margin: 3px 0 27px 0


.footer
  background-color: #FAFAFA
  border-top:       1px solid #EEEEEE
  font-size:        87.5%
  padding:          21px 21px 21px 26px
  line-height:      1.6
  margin:           0 auto
  margin-top:       54px
  ul.legal-links,
  p.copyright
    text-align: right
    margin:     5px 6px 3px 0
    padding:    0
  ul.legal-links
    li
      list-style:    none
      padding-right: 6px


#menu
  margin-left: -($width)
  width:       $width
  position:    fixed
  top:         0
  left:        0
  bottom:      0
  z-index:     1000
  background:  #6C5035
  overflow-y:  auto
  -webkit-overflow-scrolling: touch
  a
    color:   #F3F3F3
    border:  none
    padding: 21px 18px
  .pure-menu,
  .pure-menu ul
    border:     none
    background: transparent
  .pure-menu ul,
  .pure-menu .menu-item-divided
    border-top: 1px solid #4D331A
  .pure-menu li a:hover,
  .pure-menu li a:focus
    background: #55391D
  .pure-menu-heading
    background: #93765A
  .pure-menu-selected a
    color:      #FFFFFF
    background: #4C331A
  .pure-menu-heading
    font-size: 110%
    color:     #FFFFFF
    margin:    0


.menu-link
  position:   fixed
  display:    block
  top:        0
  left:       0
  background: #000
  background: rgba(0,0,0,0.7)
  font-size:  10px
  z-index:    10
  width:      2em
  height:     auto
  padding:    18px 9px
  &:hover,
  &:focus
    background: #000
  span
    position: relative
    display:  block
  span,
  span:before,
  span:after
    background-color: #fff
    width:            100%
    height:           18px
  span:before,
  span:after
    position:   absolute
    margin-top: -9px
    content:    " "
  span:after
    margin-top: 8px



@media(min-width: 48em)
  .header,
  .content
     padding-left:  28px
     padding-right: 28px
  #content
     padding-left: $width
     left:         0
  #menu
      left: $width
  .menu-link
      position: fixed
      left:     $width
      display:  none
  #content.active .menu-link
    left: $width

@media(max-width: 48em)
  #content.active
    position: relative
    left:     $width
